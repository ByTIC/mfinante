{
  "name": "bytic/mfinante",
  "description": "Parser for company data from mfinante.ro website",
  "license": "MIT",
  "authors": [
    {
      "name": "Gabriel Solomon",
      "email": "hello@gabrielsolomon.ro"
    }
  ],
  "autoload": {
    "psr-4": {
      "ByTIC\\MFinante\\": "src/"
    }
  },
  "config": {
    "bin-dir": "bin"
  },
  "require": {
    "php": "^7.0",
    "fabpot/goutte": "^3.2",
    "jonnyw/php-phantomjs": "^4.6"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^6.2",
    "mockery/mockery": "^0.9"
  },
  "scripts": {
    "post-install-cmd": [
      "PhantomInstaller\\Installer::installPhantomJS"
    ],
    "post-update-cmd": [
      "PhantomInstaller\\Installer::installPhantomJS"
    ]
  }
}
